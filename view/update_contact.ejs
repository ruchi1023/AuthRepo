<!-- include header -->
<%- include('partials/header') -%>
<!-- /include header -->
<%- include ("partials/nav") -%>
<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/dashboard"
          ><i class="fas fa-angle-double-left"></i> All Contact</a
        >
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update Contact</h2>
      <span class="text-dark">Update contact information</span>
    </div>

    <!-- add user form -->
    <!-- form handling -->
    <form method="POST" id="update_user" class="login-box"> 
      <div class="new_user">
        <div class="form-group mt-3">
          <label for="name" class="text-dark">Name</label>
          <input type="hidden" name="id" value="<%= contact._id %>" />
          <input
            type="text"
            name="name"
            value="<%= contact.name %>"
            placeholder="Mark Stoenis"
          />
        </div>
        <div class="form-group mt-3">
          <label for="Email" class="text-dark">Email</label>
          <input
            type="text"
            name="email"
            value="<%= contact.email%>"
            placeholder="example@gmail.com"
          />
        </div>
        <div class="form-group mt-3">
          <label for="phone" class="text-dark">Phone</label>
          <input
            type="number"
            name="phone"
            value="<%= contact.phone%>"
            placeholder="999999999"
          />
        </div>
        <div class="form-group mt-3">
          <button type="submit" class="btn btn-danger text-dark update">
            Save
          </button>
          <a href="/dashboard" class="btn btn-warning">
            <i class="fas fa-undo"></i> 
            Cancel
        </a>
        </div>
      </div>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('partials/footer') -%>
<!-- /include footer -->

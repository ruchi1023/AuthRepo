<!-- form handling -->
<form
  action="/dashboard/api/contact"
  method="POST"
  class="justify-content-center m-auto w-400 d-flex mt-5 login-box"
>
  <div class="new_user">
    <div class="form-group">
      <label for="name" class="text-dark">Name</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="name" placeholder="Name" />
    </div>
    <div class="form-group mt-3">
      <label for="Email" class="text-dark">Email</label>
      <input
        type="text"
        name="email"
        placeholder="example@gmail.com"
      />
    </div>
    <div class="form-group mt-3">
      <label for="phone" class="text-dark">Phone</label>
      <input type="phone" name="phone" placeholder="999999999" />
    </div>

    <div class="form-group d-flex justify-content-center mt-3">
      <button type="submit" class="btn btn-primary text-dark ">
        Save
      </button>
    </div>
  </div>
</form>
